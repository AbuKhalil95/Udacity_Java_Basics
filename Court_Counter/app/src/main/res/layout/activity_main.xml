<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_height = "match_parent"
    android:layout_width = "match_parent"
    tools:context = ".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Team A"
                android:layout_height = "wrap_content"
                android:layout_width = "match_parent"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_height = "wrap_content"
                android:layout_width = "match_parent"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_a_score"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:onClick="clickButton3A"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:onClick="clickButton2A"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:onClick="clickButton1A"/>
        </LinearLayout>
        <View
            android:layout_weight="0"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_height = "wrap_content"
                android:layout_width = "match_parent"
                android:text="Team B"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_height = "wrap_content"
                android:layout_width = "match_parent"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_b_score"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:onClick="clickButton3B"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:onClick="clickButton2B"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:onClick="clickButton1B"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="clickButton0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>
</RelativeLayout>